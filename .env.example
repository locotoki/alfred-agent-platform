# Alfred Platform Environment Variables
# Copy this file to .env and fill in your actual values

#############################################################################
# PLATFORM-SPECIFIC SETUP INSTRUCTIONS
#############################################################################
# 
# Windows/Linux with NVIDIA GPU:
#   docker-compose -f docker-compose.yml -f docker-compose.gpu.yml up -d
# 
# Mac (Apple Silicon):
#   docker-compose -f docker-compose.yml -f docker-compose.mac.yml up -d
#
# Development (CPU only):
#   docker-compose up -d
#
#############################################################################

#############################################################################
# API KEYS AND CREDENTIALS
#############################################################################

# OpenAI API Configuration
ALFRED_OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Configuration (optional)
ALFRED_ANTHROPIC_API_KEY=your-anthropic-api-key-here

# PostgreSQL Configuration
POSTGRES_PASSWORD=your-secure-postgres-password

# Telegram Bot Token (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

#############################################################################
# PERFORMANCE TUNING
#############################################################################

# Daily token budget for OpenAI API
ALFRED_DAILY_TOKEN_BUDGET=250000

# YouTube API Key (optional for social intel features)
ALFRED_YOUTUBE_API_KEY=

#############################################################################
# DEVELOPMENT SETTINGS
#############################################################################

# Enable debug mode
ALFRED_DEBUG=true

# Environment (development/staging/production)
ALFRED_ENVIRONMENT=development
